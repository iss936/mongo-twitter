{% block javascripts %}
    <!--<script src="http://d3js.org/d3.v3.min.js"></script> -->
<script>

// console.log(totals);
createConfig();
function createConfig() {
      var strlabels = "{{labels }}";

      var labels = strlabels.split(',');

      var temp = {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Nombre de tweets",
                        borderColor: window.chartColors.red,
                        backgroundColor: window.chartColors.red,
                        data:  [{{totals}}],
                        fill: false,
                    }]
                },
                options: {
                    responsive: true,
                    title:{
                        display: true,
                        text: 'Nombre de tweets #benzema'
                    },
                    tooltips: {
                        position: 'nearest',
                        mode: 'index',
                        intersect: false,
                        yPadding: 10,
                        xPadding: 10,
                        caretSize: 8,
                        backgroundColor: 'rgba(72, 241, 12, 1)',
                        titleFontColor: window.chartColors.black,
                        bodyFontColor: window.chartColors.black,
                        borderColor: 'rgba(0,0,0,1)',
                        borderWidth: 4
                    },
                }
            };
        return temp;

        }



        window.onload = function() {
            var container = document.querySelector('.container_new');
            var div = document.createElement('div');
            div.classList.add('chart-container');

            var canvas = document.createElement('canvas');
            div.appendChild(canvas);
            container.appendChild(div);

            var ctx = canvas.getContext('2d');
            var config = createConfig();
            new Chart(ctx, config);
            console.log(config);
        };


</script>
{% endblock %}